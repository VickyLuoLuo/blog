<!-- Table of Contents -->
<% if (page.catalog) { %>
    <% if (is_post()){ %>
      <aside id="sidebar">
        <div id="toc" class="toc-article">
        <strong class="toc-title"><%= __('Contents') %></strong>
        <% if (toc(page.content) != ""){ %>
            <!-- 修改自动编号显示问题 -->
           <%- toc(page.content, { "class": "toc-nav", list_number: page.toc_number }) %>
        <% } else { %>
          <ol class="nav"><%= __('none') %></ol>
        <% } %>
        </div>
      </aside>
    <% } %>
<% } %>